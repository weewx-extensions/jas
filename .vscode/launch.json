{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
            {
            "name": "weectl report",
            "type": "debugpy",
            "request": "launch",
            "justMyCode": false,
            "program": "~/weewx/src/weectl.py",
            "args": [
                "report",
                "run",
                "jas",
                "--config",
                "tmp/weewx.conf"
            ],
            "console": "integratedTerminal"
        },
        {
            "name": "Specific test",
            "type": "debugpy",
            "request": "launch",
            "program": "bin/user/tests/unit/test_template.py",
            "console": "integratedTerminal",
            "args": [
                "TestTemplate",
                "test_template"
            ]
        },
        {
            "name": "Python Debugger: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        }
    ]
}